<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TextLabel_Secondary" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="TextLabel_Primary" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <string-array name="school">
        <item>--选择学校--</item>
        <item>厦门大学</item>
        <item>福州大学</item>
        <item>福建师范大学</item>
        <item>福建农林大学</item>
    </string-array>

    <string-array name="department">
        <item>--选择院系--</item>
        <item>数学与计算机科学学院</item>
        <item>物理与信息工程学院</item>
        <item>机械工程及自动化学院</item>
        <item>电气工程与自动化学院</item>
        <item>人文社会科学学院</item>
        <item>外国语学院</item>
        <item>紫金矿业学院</item>
    </string-array>


</resources>
